@model IEnumerable<MyMainWebMVC.Models.Department>

@{
    ViewData["Title"] = "DepartmentView";
}
<style>
    button {
        color: red;
    }
</style>

<h1 style="color:darkcyan;font-family:Arial,sans-serif">~Department~</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeptId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Action)
            </th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeptId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeptName)
            </td>
            <td>
                <button style="background-color: magenta">@Html.ActionLink("Edit", "Edit", new { id=item.DeptId })</button> |
                <button style="background-color: red">@Html.ActionLink("Delete", "Delete", new { id = item.DeptId })</button>
            </td>
                
        </tr>
}
    </tbody> 
</table>
